{
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist/"],
  "compilerOptions": {
    "jsx": "react",
    "lib": ["ES2020", "dom"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src/"
  }
}
